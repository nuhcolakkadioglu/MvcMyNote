@model MyNote.Enties.NoteUser
@{
    ViewBag.Title = "Profiliniz";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <hr />

    <div class="row">
        <div class="col-md-2">
            <img src="~/Images/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" alt="" />
        </div>
        <div class="col-md-8">
            <h3>@(Model.Name +" "+ Model.Surname)</h3>
            <br />
            <h6><b>Username : </b> @Model.Username</h6>
            <br />
            <h6><b>Email : </b> @Model.Email</h6>
            <br />
            <h6><a href="#">more...</a></h6>
        </div>

        <div class="col-md-2 text-right">
            <div class="btn-group">
                <a href="#" class="btn dropdown-toggle btn-info" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-cog">&nbsp;</span> Ayarlar
                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("EditProfile")"> <span class="glyphicon glyphicon-edit">&nbsp;</span> Düzenle</a></li>

                    <li><a href="@Url.Action("DeleteProfile")" onclick="return confirm('kayıt silinsinmi');"> <span class="glyphicon glyphicon-trash">&nbsp;</span> Sil</a></li>

                </ul>
            </div>
        </div>

</div></div>
