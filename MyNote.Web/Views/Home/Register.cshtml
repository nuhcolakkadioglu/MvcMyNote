@model MyNote.Enties.DTO.RegisterViewModel
@{
    ViewBag.Title = "Kullanıcı Kayıt Formu";
}
<title>Kullanıcı Kayıt formu</title>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Login.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">kullanıcı giriş</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(m => m.Username, null, new { @class = "form-control", placeholder = "kullanıcı adı" })
                        @Html.ValidationMessageFor(m => m.Username, null, new { @class = "label label-danger" })

                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control", placeholder = "email adres" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "label label-danger" })

                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", placeholder = "şifre", type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "label label-danger" } )
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(m => m.RePassword, null, new { @class = "form-control", placeholder = "şifre tekrar", type = "password" })
                        @Html.ValidationMessageFor(m => m.RePassword, null, new { @class = "label label-danger" })
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}


<script>
    $(function () {
        $('footer').hide();
    });
</script>