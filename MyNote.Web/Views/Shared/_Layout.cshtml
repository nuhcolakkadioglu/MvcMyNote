                    </li>
                    <li>
                        <a href="">
                            <span class="glyphicon glyphicon-user"></span>
                            Üye Ol
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="glyphicon glyphicon-user"></span>

                            NCk
                        </a>
                    </li>
                    <li>

                        <a href="">
                            <span class="glyphicon glyphicon-log-out"></span>

                            Çıkış
                        </a>
                    </li>
                </ul>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>
    <!-- /.container -->
    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <h5><strong>Site haritası.</strong></h5>
                    <hr />
                    <p>

                        <a href="#">Hakkımızda</a> <br />

                        <a href="#">En Beğenilenler</a><br />

