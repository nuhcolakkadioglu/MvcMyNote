@using MyNote.Web.ViewModels
@using MyNote.Enties.Messages
@model ErrorViewModel
@{
    ViewBag.Title = Model.Title;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Login.css" rel="stylesheet" />

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove-circle"></span> @Model.Title</h2>
                    <hr />
                    <p class="text-justify">

                        @foreach (ErrorMessageObj item in Model.Items)
                        {
                        <p>@item.Message</p><br />
                        }


                        </p>
                    </div>

                </div>
            </div>
        </div>
    </section>

    @{
        string js = string.Empty;

        if (Model.IsRedirect)
        {
            js = " setTimeout(function () {window.location = '" + Model.RedirectingUrl + "';}, '" + Model.RedirectingTimeout + "');";
        }
    }
    <script>
    $(function () {
        @Html.Raw(js)
    });
    </script>